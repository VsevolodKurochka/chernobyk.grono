{% import 'macros/base.twig' as macros %}
{% extends 'layouts/mainLayout.twig' %}

{% set logo = 'img/logo.png' %}

{% set title = 'Grono' %}
{% set description = 'Мы строим сообщество людей, которые мечтают путешествовать и зарабатывать на этом' %}
{% set image = logo %}
{% set url = 'url' %}

{% block meta %}
{{ macros.meta(title, description, image, url) }}
{% endblock %}

{% block css %}
{{ macros.css("css/style.min.css") }}
{{ macros.css("css/slick.css") }}
{% endblock %}

{% block js %}
{{ macros.js("js/jquery.min.js") }}
{{ macros.js("js/slick.min.js") }}
{{ macros.js("js/jquery.lazy.min.js") }}
{{ macros.js("js/jquery.main.js") }}
{% endblock %}

{% block nav %}
    {% include 'components/navigation/navigation.twig' with {
        items: [
            {href: '#section-greeting', text: 'Главная'},
            {href: '#section-about', text: 'О нас'},
            {href: '#section-trend', text: 'Grono'},
            {href: '#section-video', text: 'Бизнес'}
        ],
        logo: logo,
        addition: {
            show: true
        }
    } %}
{% endblock %}

{% block content %}
{% include 'pages/index/section-greeting.twig' %}
{% include 'pages/index/section-map.twig' %}
{% include 'pages/index/section-about.twig' %}
{% include 'pages/index/section-trend.twig' %}
{% include 'pages/index/section-video.twig' %}
{% include 'pages/index/section-model.twig' %}
{% include 'pages/index/section-education.twig' %}
{% include 'pages/index/section-life.twig' %}
{% include 'pages/index/section-mission.twig' %}
{% endblock %}

{% block footer %}
    {% include 'components/footer/footer.twig' %}
{% endblock %}