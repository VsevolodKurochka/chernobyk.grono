<div class="preloader" style="position: fixed; width: 100%; height: 100%; background-image: url('{{ path }}/img/bg-video.jpg'); background-size: cover; top: 0; left: 0; z-index: 1000; transition: all ease 0.3s;">
    <video
            id="js-preloader-video"
            style="position: absolute; left: 0; top: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1"
            preload="auto"
            src="{{ path }}/img/background-video.mp4"
            autoplay
            playsinline
            muted
            loop>
    </video>
</div>